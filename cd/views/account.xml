<odoo>
    <record id="view_account_form_inherit" model="ir.ui.view">
        <field name="name">account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="delivery_date"/>
            </field>
        </field>
    </record>

    <record id="view_account_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="delivery_date"/>
            </field>
        </field>
    </record>

    <record id="view_datev_report_tree" model="ir.ui.view">
        <field name="name">datev.report.tree</field>
        <field name="model">datev.report</field>
        <field name="arch" type="xml">
            <tree string="DATEV Report" create="false" edit="false" sample="1">
<!--                <field name="id"/>-->
                <field name="receivable_code"/>
                <field name="move_name"/>
                <field name="invoice_date"/>
                <field name="delivery_date"/>
                <field name="payment_date"/>
                <field name="quantity"/>
                <field name="price_subtotal"/>
                <field name="tax_rate" widget="datev_tax_rate"/>
                <field name="tax_base_amount" widget="datev_tax_amount"/>
                <field name="price_total"/>
                <field name="currency_name"/>
                <field name="debit_credit" widget="datev_debit_credit"/>
                <field name="partner_id"/>
                <field name="account_id" widget="datev_account_number"/>
                <field name="country_code"/>
                <field name="vat_id" widget="datev_vat"/>
                <field name="weight" widget="datev_weight"/>
            </tree>
        </field>
    </record>

    <record id="action_account_moves_datev" model="ir.actions.act_window">
<!--        <field name="context">{'journal_type':'general', 'search_default_posted':1}</field>-->
        <field name="context">{}</field>
        <field name="name">DATEV Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">datev.report</field>
<!--        <field name="domain">[('display_type', 'not in', ('line_section', 'line_note')), ('move_id.state', '!=', 'cancel')]</field>-->
        <field name="domain">[]</field>
        <field name="view_id" ref="view_datev_report_tree"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_action_account_moves_datev" action="action_account_moves_datev" parent="account.menu_finance_entries_accounting_miscellaneous" groups="account.group_account_readonly" sequence="15"/>

</odoo>
